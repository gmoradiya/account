<center><h1>medicines</h1>

<%= link_to 'New medicine', new_medicine_path, class: 'btn btn-primary mb-10' %>
</center>
<div class="search-bar">
  <%= form_with url: medicines_path, method: :get, local: true do %>
    <input type="text" name="query" placeholder="Search by Name or Case Number" value="<%= params[:query] %>">
    <button type="submit">Search</button>
  <% end %>
</div>

<div class="patient-table">

  <table>
    <thead>
      <tr>
        <th>No.</th>

        <th>Name</th>
        <th>Dosage</th>
        <th>Description</th>
        <th>Action</th>

      </tr>
    </thead>
    <tbody>
      <% @medicines.each_with_index do |medicine, ind| %>
        <tr>
          <td><%= ind + 1 %></td>

          <td><%= medicine.name %></td>
          <td><%= medicine.dosage %></td>
          <td><%= medicine.description %></td>
          <td>
            <%= link_to 'View', medicine_path(medicine), class: 'btn btn-view' %>
            <%= link_to 'Edit', edit_medicine_path(medicine), class: 'btn btn-edit' %>
            <%= link_to 'Delete', medicine_path(medicine), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-delete' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="pagination">
  <%= paginate @medicines %>
</div>


