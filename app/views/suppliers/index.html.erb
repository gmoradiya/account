<center><h1>Suppliers</h1>

<%= link_to 'New Supplier', new_supplier_path, class: 'btn btn-primary mb-10' %>
</center>
<div class="search-bar">
  <%= form_with url: suppliers_path, method: :get, local: true do %>
      <input type="text" name="query" placeholder="Search by Name or Phone Number" value="<%= params[:query] %>" class="input-field">
    <button type="submit">Search</button>

  <% end %>
</div>

<div class="patient-table">

  <table>
    <thead>
      <tr>
      <th>No.</th>
      <th>Name</th>
      <th>Owner Name</th>
      <th>Phone Number</th>
      <th>Alternate Phone Number</th>
      <th>Email</th>
      <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @suppliers.each_with_index do |supplier, ind| %>
        <tr>
          <td><%= ind + 1 %></td>
          <td><%= supplier.name %></td>
          <td><%= supplier.owner_name %></td>
          <td><%= supplier.phone_number %></td>
          <td><%= supplier.alternate_phone_number %></td>
          <td><%= supplier.email %></td>
          
          <td>
            <%= link_to 'View', supplier_path(supplier), class: 'btn btn-view' %>
            <%= link_to 'Edit', edit_supplier_path(supplier), class: 'btn btn-edit' %>
            <%= link_to 'Delete', supplier_path(supplier), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-delete' %>

          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="pagination">
  <%= paginate @suppliers %>
</div>
