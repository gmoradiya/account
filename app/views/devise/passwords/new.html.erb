<div class="forgot-password-container">
  <h2>Forgot Your Password?</h2>
  <p>Please enter your email address to receive password reset instructions.</p>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name)) do |f| %>
    <div class="form-group">
      <%= f.label :email, "Email Address" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Enter your email" %>
    </div>

    <div class="form-group">
      <%= f.submit "Send Reset Instructions", class: "btn btn-primary btn-block" %>
    </div>
  <% end %>

  <div class="forgot-password-footer">
    <%= link_to "Back to Login", new_session_path(resource_name), class: "text-link" %><br>
    <%= link_to "Sign Up", new_registration_path(resource_name), class: "text-link" %>
  </div>
</div>
